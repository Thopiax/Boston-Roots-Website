%html
  %head
    %title Boston Roots
    = csrf_meta_tags

    %meta{ charset:"utf-8"}
    %meta{ "http-equiv" => "x-ua-compatible", content: "ie=edge"}
    %meta{ name:"viewport", content:"width=device-width, initial-scale=1" }
    %meta{name:"google-site-verification", content: "I9wqLKpcv-2sIKmUvOd8TVg2dQoffTNLqW17B0jOu2E"}

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = favicon_link_tag       'favicon.png', type: 'image/png'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  %body{"data-spy" => "scroll", "data-target" => ".navbar", "data-offset" => "50"}
    #site_wrapper
      %nav.navbar.navbar-fixed-top.short-shadow
        .navbar-brand#nav_brand.col-xs-12.col-md-4
          %a{to: "#home"}
            = image_tag("favicon.png")
        %ul#navdropdown.nav.navbar-nav.nav-pills.navbar-right
          %li#navhome
            = link_to "Home", '/'
          %li#navtimeline
            = link_to "Timeline", '/timeline'
          %li#navteam
            = link_to "Team", '/team'
          %li#navcontact
            = link_to "Join us", '/contact'


      = yield

    %section#footer
      .notebook
        %p Â© Copyright 2016 Boston Roots, All Rights Reserved