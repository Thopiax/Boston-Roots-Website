%html
  %head
    %title Boston Roots
    = csrf_meta_tags

    %meta{ charset:"utf-8"}
    %meta{ "http-equiv" => "x-ua-compatible", content: "ie=edge"}
    %meta{ name:"viewport", content:"width=device-width, initial-scale=1" }
    %meta{name:"google-site-verification", content: "I9wqLKpcv-2sIKmUvOd8TVg2dQoffTNLqW17B0jOu2E"}

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = favicon_link_tag       'favicon.png', type: 'image/png'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    = evil_icons_sprite

  %body{"data-spy" => "scroll", "data-target" => ".navbar", "data-offset" => "50"}
    #site_wrapper
      %nav.navbar.navbar-fixed-top.short-shadow
        #navlinks
          .navtable
            %ul#left-subnav.nav.navbar-nav.nav-pills
              %li.nav-option.nav-on-only{onclick: "return toggleMobileNav();"}
                = evil_icon 'ei-close', size: :m 
              %li.nav-option.nav-on-only
                = link_to "Home", root_path
              %li.nav-option
                = link_to "Mission", mission_path
              %li.nav-option
                = link_to "Timeline", timeline_path
            %ul.navbar-brand#nav_brand.nav.navbar-nav.nav-pills
              %li
                = link_to image_tag("favicon.png"), root_path, {onclick: "return toggleMobileNav();"}
            %ul#right-subnav.nav.navbar-nav.nav-pills
              %li.nav-option
                = link_to "Team", team_path
              %li.nav-option
                = link_to "Join us", contacts_path
              
      .major_wrapper
        = yield

    %section#footer
      .notebook
        %p Â© Copyright 2017 Boston Roots, All Rights Reserved